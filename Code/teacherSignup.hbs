<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Result Management System</title>

    <!-- External CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- External JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="TeacherSignup.js"></script>

    <!-- Custom CSS -->
    <style>
        /* Add your custom styles here */
        /* Example:
        .navbar {
            background-color: #E8F5E9;
        }
        */
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8F5E9;">
        <div class="container">
            <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">Result Management System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/aboutUs" style="color: #4CAF50;">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <form class="cssloginform" action="/addTeacherSignup" method="GET">
            <div class="form-group">
                <label for="exampleInputName">Name</label>
                <input name="fullName" type="text" class="form-control" id="exampleInputName"
                    aria-describedby="emailHelp" placeholder="Enter Your Name" required pattern="[A-Za-z ]+">
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid Name (letters and spaces only).
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid email address.
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                    placeholder="Password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a password.
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-3">Register</button>
            <div class="anchorlink">
                <a id="login-link" class="mt-3" href='teacherLogin'>Already Registered? Click here to Log in</a>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <nav class="navbar navbar-expand-lg navbar-light mt-5 fixed-bottom" style="background-color: #E8F5E9;">
        <div class="container" style="max-width: 200px;"> <!-- Adjust the max-width as needed -->
            <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">&copy; Nagarro</a>
        </div>
    </nav>
</body>

</html>
