<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Student</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8F5E9;">
    <div class="container">
        <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">Result Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
               <li class="nav-item">
                    <a class="nav-link" href="/aboutUs" style="color: #4CAF50;">About Us</a>

                </li>
               
                <li class="nav-item">
                    <button type="button" class="btn btn-secondary" id="logoutId">Logout</button>
                </li>
            </ul>
        </div>
    </div>
</nav>

 <a class="nav-link" href="/view" style="color: #4CAF50;">Back</a>

<div class="container mt-5">
    <h1 class="mb-4">Update Student</h1>
    <form action="/update/{{student.ID}}" method="POST">
        <div class="form-group">
            <label for="rollNumber">Roll Number</label>
            <input type="text" class="form-control" id="rollNumber" name="rollNumber" placeholder="Roll Number" pattern="[0-9]+" value="{{student.rollNumber}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a valid integer Roll Number.
            </div>
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" pattern="[A-Za-z ]+" value="{{student.name}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a valid Name (letters and spaces only).
            </div>
        </div>
        <div class="form-group">
            <label for="dateOfBirth">Date of Birth</label>
            <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value="{{student.dateOfBirth}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a valid Date of Birth.
            </div>
        </div>
        <div class="form-group">
            <label for="score">Score</label>
            <input type="text" class="form-control" id="score" name="score" placeholder="Score" pattern="[0-9]+" value="{{student.score}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a valid integer Score.
            </div>
        </div>
        <button type="submit" class="btn btn-success">Update Student</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get a reference to the "Logout" button
        const logoutButton = document.getElementById('logoutId');

        // Add a click event listener to the button
        logoutButton.addEventListener('click', function () {
            // Redirect to the root URL when the button is clicked
            window.location.href = '/';
        });
    });
</script>

<nav class="navbar navbar-expand-lg navbar-light mt-5 " style="background-color: #E8F5E9;">
    <div class="container" style="max-width: 200px;"> <!-- Adjust the max-width as needed -->
        <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">&copy; Nagarro</a>
    </div>
</nav>

</body>
</html>
