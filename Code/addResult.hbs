     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8F5E9;">
    <div class="container">
        <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">Result Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
               <li class="nav-item">
                    <a class="nav-link" href="/aboutUs" style="color: #4CAF50;">About Us</a>

                </li>
                <li class="nav-item">
                     <button type="button" class="btn btn-secondary" id="logoutId">Logout</button>
                </li>
            </ul>
        </div>
    </div>
</nav>


 <div class="container mt-5">
        {{#if alertMessageForIdenticalRollNumber}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{alertMessageForIdenticalRollNumber}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    </div>

 <a class="nav-link" href="/view" style="color: #4CAF50;">Back</a>

<div class="container mt-5">
    <h1 class="text-center">Add Student Result</h1>
    <form action="/AddStudentByTeacher" method="get">
        <div class="form-group">
            <label for="InputRollNumber">Roll Number</label>
            <input type="text" name="rollNumber" class="form-control" id="InputRollNumber"
                placeholder="Enter Roll Number" pattern="[0-9]+" title="Please enter a valid integer Roll Number" required>
        </div>
        <div class="form-group">
            <label for="InputName">Name</label>
            <input type="text" name="name" class="form-control" id="InputName" placeholder="Name" pattern="[A-Za-z ]+" title="Please enter a valid Name (letters and spaces only)" required>
        </div>
        <div class="form-group">
            <label for="InputDateOfBirth">Date Of Birth</label>
            <input type="date" name="dateOfBirth" class="form-control" id="InputDateOfBirth" required>
        </div>
        <div class="form-group">
            <label for="InputScore">Score</label>
            <input type="text" name="score" class="form-control" id="InputScore"
                placeholder="Enter the scores" pattern="[0-9]+" title="Please enter a valid integer Score" required>
        </div>
        <button type="submit" class="btn btn-success btn-block mt-3">Add Record</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get a reference to the "Logout" button
        const logoutButton = document.getElementById('logoutId');

        // Add a click event listener to the button
        logoutButton.addEventListener('click', function () {
            // Redirect to the root URL when the button is clicked
            window.location.href = '/';
        });
    });
</script>

