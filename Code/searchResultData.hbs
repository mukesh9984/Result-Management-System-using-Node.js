<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filtered Data</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8F5E9;">
    <div class="container">
        <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">Result Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/aboutUs" style="color: #4CAF50;">About Us</a>
                </li>
              
            </ul>
        </div>
    </div>
</nav>



<div class="container mt-5">
    <h1 class="text-center">Result</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Roll Number</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            {{#filteredData}}
            <tr>
                <td>{{rollNumber}}</td>
                <td>{{name}}</td>
                <td>{{dateOfBirth}}</td>
                <td>{{score}}</td>
            </tr>
            {{/filteredData}}
        </tbody>
    </table>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get a reference to the "Logout" button
        const logoutButton = document.getElementById('logoutId');

        // Add a click event listener to the button
        logoutButton.addEventListener('click', function () {
            // Redirect to the root URL when the button is clicked
            window.location.href = '/';
        });
    });
</script>

<nav class="navbar navbar-expand-lg navbar-light mt-5 fixed-bottom " style="background-color: #E8F5E9;">
    <div class="container" style="max-width: 200px;"> <!-- Adjust the max-width as needed -->
        <a class="navbar-brand" href="#" style="font-weight: bold; color: #4CAF50;">&copy; Nagarro</a>
    </div>
</nav>

</body>
</html>
